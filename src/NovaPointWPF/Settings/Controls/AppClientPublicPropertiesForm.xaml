<UserControl x:Class="NovaPointWPF.Settings.Controls.AppClientPublicPropertiesForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NovaPointWPF.Settings.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="600">

    <Grid>

        <StackPanel>

            <TextBox
                x:Name="TextBoxAppTitle"
                Style="{DynamicResource TextBoxSubtitle}"
                Text="{Binding ClientTitle, Mode=TwoWay}"
                Width="350"
                HorizontalAlignment="Left"/>

            <Border Style="{DynamicResource BorderPrimaryBackgroud}" Margin=" 0,8,0,0">

                <StackPanel>

                    <DockPanel>

                        <TextBlock
                            Style="{DynamicResource TextBlockBody}"
                            Text="Tenant ID"/>

                        <TextBox
                            x:Name="TextBoxAppTenantId"
                            Style="{DynamicResource TextBoxSolutionFormTextInput}"
                            Text="{Binding TenantId, Mode=TwoWay}"
                            Margin="0,8,0,0"
                            Width="330"
                            TextAlignment="Center"
                            DockPanel.Dock="Right"/>

                        <TextBlock DockPanel.Dock="Right"/>

                    </DockPanel>

                    <DockPanel Margin="0,16,0,0">

                        <TextBlock
                            Style="{DynamicResource TextBlockBody}"
                            Text="Client ID"/>

                        <TextBox
                            x:Name="TextBoxAppClientId"
                            Style="{DynamicResource TextBoxSolutionFormTextInput}"
                            Text="{Binding ClientId, Mode=TwoWay}"
                            Width="330"
                            TextAlignment="Center"
                            DockPanel.Dock="Right"/>

                        <TextBlock DockPanel.Dock="Right"/>

                    </DockPanel>

                    <DockPanel
                        Margin="0,16,0,0">

                        <TextBlock
                            Style="{DynamicResource TextBlockBody}"
                            Text="Should NovaPoint cache access token for this client?"
                            DockPanel.Dock="Left"/>

                        <ToggleButton
                            x:Name="ButtonAppCache"
                            Style="{DynamicResource ToggleButtonSolutionFormYesNo}"
                            IsChecked="{Binding CachingToken, Mode=TwoWay}"
                            Margin="8,0,0,0"
                            DockPanel.Dock="Right"/>

                        <TextBlock DockPanel.Dock="Right"/>

                    </DockPanel>

                </StackPanel>

            </Border>

        </StackPanel>

    </Grid>
    
</UserControl>
