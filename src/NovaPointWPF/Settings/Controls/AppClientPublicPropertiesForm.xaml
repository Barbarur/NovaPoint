<UserControl x:Class="NovaPointWPF.Settings.Controls.AppClientPublicPropertiesForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NovaPointWPF.Settings.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="600">

    <Grid>

        <StackPanel x:Name="FormPanel">

            <DockPanel>

                <TextBlock
                        Style="{DynamicResource TextBlockBody}"
                        Text="Should NovaPoint cache access token for this client?"
                        DockPanel.Dock="Left"/>

                <ToggleButton
                    x:Name="ButtonAppCache"
                    Style="{DynamicResource ToggleButtonSolutionFormYesNo}"
                    IsChecked="{Binding CachingToken, Mode=TwoWay}"
                    Margin="8,0,0,0"
                    DockPanel.Dock="Right"
                    IsEnabled="False"/>

                <TextBlock DockPanel.Dock="Right"/>

            </DockPanel>

        </StackPanel>

    </Grid>
    
</UserControl>
