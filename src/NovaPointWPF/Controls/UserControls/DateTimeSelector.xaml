<UserControl x:Class="NovaPointWPF.Controls.UserControls.DateTimeSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NovaPointWPF.Controls.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid VerticalAlignment="Top" Margin="0">
        
        <StackPanel
            Margin="0"
            Orientation="Horizontal">

            <ComboBox
                x:Name="ComboBoxYear"
                Style="{DynamicResource SolutionFormComboBox}"
                Width="60"
                SelectionChanged="DateTimeAfterSelectionChanged"/>

            <ComboBox
                x:Name="ComboBoxMonth"
                Margin="2,0,0,0"
                Style="{DynamicResource SolutionFormComboBox}"
                SelectionChanged="DateTimeAfterSelectionChanged"
                Width="99"/>

            <ComboBox
                x:Name="ComboBoxDay"
                Margin="2,0,0,0"
                Style="{DynamicResource SolutionFormComboBox}"
                Width="45"
                SelectionChanged="DateTimeAfterSelectionChanged"/>

            <ComboBox
                x:Name="ComboBoxHour"
                Margin="2,0,0,0"
                Style="{DynamicResource SolutionFormComboBox}"
                Width="65"
                SelectionChanged="DateTimeAfterSelectionChanged"/>

        </StackPanel>


    </Grid>
</UserControl>
