<UserControl x:Class="NovaPointWPF.Pages.DesignMaterial.NPTextBoxField"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NovaPointWPF.Pages.DesignMaterial"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="root">
    <Grid>
        <StackPanel Margin="0, 0, 0, 9">
            <Label Content="{Binding Title, ElementName=root}"/>
            <TextBox Text="{Binding Text, ElementName=root}"
                     Height="24"
                     TextAlignment="Center"
                     BorderThickness="1"
                     BorderBrush="Black"/>
        </StackPanel>
    </Grid>
</UserControl>
