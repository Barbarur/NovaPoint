<Page x:Class="NovaPointWPF.Pages.Solutions.Report.ItemAllListSingleSiteSingleReportForm"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NovaPointWPF.Pages.Solutions.Report" xmlns:designmaterial="clr-namespace:NovaPointWPF.Pages.DesignMaterial"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ItemAllListSingleSiteSingleReportForm">

    <Grid Background="Transparent">
        <StackPanel>

            <Label Content="All Files / Items in a Document Library / Item List of a Site"
                   FontWeight="Bold"/>
            <Label Height="15"/>

            <designmaterial:NPTextBoxField
                Title="Site URL"
                Text="{Binding Path=SiteUrl, Mode=TwoWay, NotifyOnSourceUpdated=True, NotifyOnTargetUpdated=True}"/>

            <designmaterial:NPTextBoxField
                Title="List/Library Name"
                Text="{Binding Path=ListName, Mode=TwoWay, NotifyOnSourceUpdated=True, NotifyOnTargetUpdated=True}"/>
            
            <Label Height="15"/>

        </StackPanel>

    </Grid>
</Page>
