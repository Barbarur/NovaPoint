<Page x:Class="NovaPointWPF.Pages.Menus.MenuQuickFixPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NovaPointWPF.Pages.Menus"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MenuQuickFixPage">

    <Grid Background="Transparent">

        <StackPanel>

            <TextBlock
                Style="{DynamicResource TextBlockTitle}"
                Text="Quick Fix"
                Margin="0, 0, 0, 24"/>

            <TextBlock
                Style="{DynamicResource TextBlockBodyStrong}"
                Text="Users"/>

            <Grid
                Style="{DynamicResource SolutionMenuGrid}">

                <Border Style="{DynamicResource BorderPrimaryBackgroud}"/>

                <StackPanel>

                    <Button
                        Style="{DynamicResource SolutionMenuButton}"
                        Content="ID Mismatch"
                        Click="GoIdMismatchTroubleForm"/>

                </StackPanel>

            </Grid>


        </StackPanel>

    </Grid>
</Page>
