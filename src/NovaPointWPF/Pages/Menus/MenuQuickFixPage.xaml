<Page x:Class="NovaPointWPF.Pages.Menus.MenuQuickFixPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NovaPointWPF.Pages.Menus"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MenuQuickFixPage">
    <Page.Resources>
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="Height" Value="39"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
        </Style>
    </Page.Resources>

    <Grid Background="Transparent">

        <StackPanel>

            <Label
                Style="{DynamicResource MenuMainTitleLabel}"
                Content="Quick Fix"
                Margin="0,0,0,15"/>
            
            
            <Label
                Style="{DynamicResource MenuSectionTitleLabel}"
                Content="Users"/>

            <Grid Margin="0,0,0,15">

                <Border Style="{DynamicResource MenuBackgroudBorder}"/>

                <StackPanel>

                    <Button
                        Style="{DynamicResource SolutionMenuButton}"
                        Content="ID Mismatch"
                        Click="GoIdMismatchTroubleForm"/>

                </StackPanel>

            </Grid>

            
        </StackPanel>

    </Grid>
</Page>
