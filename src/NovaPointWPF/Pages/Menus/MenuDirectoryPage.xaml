<Page x:Class="NovaPointWPF.Pages.Menus.MenuDirectoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NovaPointWPF.Pages.Menus"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="600"
      Title="MenuDirectoryPage">

    <Grid Background="Transparent">

        <StackPanel>

            <TextBlock
            Style="{DynamicResource TextBlockTitle}"
            Text="Quick Fix"
            Margin="0, 0, 0, 24"/>

            <TextBlock
            Style="{DynamicResource TextBlockBodyStrong}"
            Text="Groups"/>

            <Grid
            Style="{DynamicResource SolutionMenuGrid}">

                <Border Style="{DynamicResource BorderPrimaryBackgroud}"/>

                <StackPanel>

                    <Button
                    Style="{DynamicResource SolutionMenuButton}"
                    Content="Report groups"
                    Click="GoGetDirectoryGroupForm"/>

                </StackPanel>

            </Grid>


        </StackPanel>

    </Grid>
</Page>
